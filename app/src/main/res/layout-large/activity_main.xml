<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"><![CDATA[
    tools:context="com.michael.feldt.catchcalculator.MainActivity">

    ]]>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/grey"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/gridView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintVertical_bias="0.058"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="Transfer Excess?"
        android:textColor="@color/grey"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridView"
        app:layout_constraintVertical_bias="0.973"/>

    <EditText
        android:id="@+id/candyNum"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:textSize="@dimen/_16sdp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/grey"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/_8sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridView"
        app:layout_constraintVertical_bias="0.967"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="102dp"
        android:layout_height="78dp"
        android:text="Candy Amount"
        android:textColor="@color/grey"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridView"
        app:layout_constraintVertical_bias="0.95"/>

    <CheckBox
        android:id="@+id/pinapBox"
        android:layout_width="142dp"
        android:layout_height="65dp"
        android:textColor="@color/grey"
        android:text="Pinaps?"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintLeft_toRightOf="@+id/candyNum"
        android:layout_marginLeft="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="155dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.004"
        app:layout_constraintRight_toLeftOf="@+id/checkBox"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="@dimen/_8sdp"
        android:minHeight="0sp"
        android:minWidth="10sp"
        android:onClick="calculate"
        android:layout_marginLeft="293dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintVertical_bias="0.088"
        android:layout_marginStart="@dimen/_246sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.724"/>

    <TextView
        android:id="@+id/Evolution3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/grey"
        android:layout_marginRight="@dimen/_8sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"/>

    <TextView
        android:id="@+id/startText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Calculate when ready!"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/grey"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pinapBox"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/calculate"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintVertical_bias="0.609"/>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_350sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:isScrollContainer="false"
        android:listSelector="@drawable/my_selector"
        android:numColumns="5"
        android:windowSoftInputMode="stateVisible|adjustPan"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pinapBox"/>

</android.support.constraint.ConstraintLayout>
